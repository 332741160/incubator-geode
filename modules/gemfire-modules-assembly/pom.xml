<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.gemstone</groupId>
  <artifactId>gemfire-modules-assembly</artifactId>
  <version>${gemfire.modules.version}</version>
  <packaging>pom</packaging>

  <name>gemfire-modules-assembly</name>
  <url>http://maven.apache.org</url>

  <parent>
    <groupId>com.gemstone</groupId>
    <artifactId>gemfire-modules-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.gemstone.gemfire</groupId>
      <artifactId>gemfire</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules-tomcat7</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules-session</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules-hibernate</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules-session-external</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-jdk14</artifactId>
    </dependency>

    <dependency>
      <groupId>com.gemstone</groupId>
      <artifactId>gemfire-modules-slf4j-weblogic</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>assemble</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <finalName>Pivotal_GemFire_Modules-${project.version}</finalName>
          <descriptors>
            <descriptor>src/main/assembly/distribution_tcserver.xml</descriptor>
            <descriptor>src/main/assembly/distribution_tcserver30.xml </descriptor>
            <descriptor>src/main/assembly/distribution_tomcat.xml</descriptor>
            <descriptor>src/main/assembly/distribution_hibernate.xml</descriptor>
            <descriptor>src/main/assembly/distribution_session.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.1</version>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>replace</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDir>target</outputDir>
          <filesToInclude>
            release/hibernate/readme.txt,
            release/session/readme.txt,
            release/tcserver/gemfire-cs/README.txt,
            release/tcserver/gemfire-p2p/README.txt,
            release/tomcat/readme.txt
          </filesToInclude>
          <replacements>
            <replacement>
              <token>@VERSION@</token>
              <value>${gemfire.modules.version}</value>
            </replacement>
          </replacements>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>default</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <configuration>
              <skip>false</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
